# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Person {
  id: ID!
  name: String!
  address: String
  zipcode: String
  mobile: String
  tel: String
  fax: String
  email: String
  homePage: String
  company: String
  department: String
  position: String
  title: String
  stockCode: String
  hotline: String
  qq: String
  wechat: String
  blog: String
  certNum: String
}

input ListInput {
  name: String
}

type Query {
  listPerson(input: ListInput): [Person!]
}
